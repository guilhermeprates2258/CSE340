<% if (messages) { %>
  <%- messages() %>
<% } %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<section>
  <h1><%= title %></h1>

  <p class="notice">
    Classification name cannot contain spaces or special characters.
  </p>

  <form action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name</label>
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      required
      pattern="^[A-Za-z0-9]+$"
      title="No spaces or special characters."
      value="<%= (locals.classification_name || '') %>"
    >

    <button type="submit" class="btn-primary">Add Classification</button>
  </form>
</section>
