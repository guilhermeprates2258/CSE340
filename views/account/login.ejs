<% if (messages) { %>
  <%- messages() %>
<% } %>
<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>


<section class="auth">
  <h1><%= title %></h1>

  <form class="auth__form"  id="loginForm" action="/account/login" method="post">
    <label for="account_email">Email</label>
    <input
      type="email"
      id="account_email"
      name="account_email"
      placeholder="you@example.com"
      required
      autocomplete="email"
    >

    <label for="account_password">Password</label>
    <p class="auth__rules" id="pw-rules">
        Passwords must be at least <strong>12 characters</strong> and contain
        <strong>1 lowercase letter</strong>, <strong>1 capital letter</strong>,
        <strong>1 number</strong>, and <strong>1 special character</strong>.
    </p>
    <input
        type="password"
        id="account_password"
        name="account_password"
        placeholder="••••••••"
        required
        autocomplete="current-password"
        aria-describedby="pw-rules"
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    >

    <button type="submit" class="btn-primary">Sign in</button>
  </form>

  <p class="auth__alt">
    Don’t have an account?
    <a href="/account/register">Create one here</a>
  </p>
</section>
